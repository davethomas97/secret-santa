{{#if isSelectedPerson}}
  <button class="btn-list" {{action "cancelAssociation" model}} class="person-name" style={{model.escapedStyle}}>{{model.name}}</button>
{{else}}
  {{#if isSelectingAssociate}}
    <button class="btn-list" {{action "selectAssociate" model}} class="person-name" style={{model.escapedStyle}}>{{model.name}}</button>
  {{else}}
    <button class="btn-list" {{action "selectPerson" model}} class="person-name" style={{model.escapedStyle}}>{{model.name}}</button>
  {{/if}}
{{/if}}
<button {{action "delete" model}} class="btn btn-delete pull-right">Delete</button>
