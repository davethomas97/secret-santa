<form {{action "savePerson" model on="submit"}}>
  <div class="form-group">
    <label>Name</label>
    {{input value=model.name required='true'}}
  </div>
  <div class="form-group">
    <label>Email</label>
    {{input value=model.email required='true' type='email'}}
  </div>
  <button type=submit>Add To List</button>
</form>
