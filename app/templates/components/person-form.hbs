<form {{action 'savePerson' name email on='submit'}} >
  <div class="form-group">
    <label>Name</label>
    {{input value=name}}
  </div>
  <div class="form-group">
    <label>Email</label>
    {{input value=email}}
  </div>

  <button {{action "savePerson" name email}} disabled={{this.validations.isInvalid}}>Add To List</button>
</form>
