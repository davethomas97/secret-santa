<form {{action 'savePerson' model on='submit'}} >
  <div class="form-group">
    <label>Name</label>
    {{input value=model.name}}
  </div>
  <div class="form-group">
    <label>Email</label>
    {{input value=model.email type="email"}}
  </div>

  <button {{action "savePerson" model}}>Add To List</button>
</form>
